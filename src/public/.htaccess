# Active le moteur de réécriture
RewriteEngine On

# Définit le dossier racine
RewriteBase /

# Si le fichier ou dossier existe, le serveur le sert directement
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Sinon, tout passe par index.php
RewriteRule ^(.*)$ index.php [QSA,L]